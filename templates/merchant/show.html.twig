{% extends 'base.html.twig' %}

{% block title %}Merchant{% endblock %}

{% block body %}
    <h1>Merchant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ merchant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ merchant.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ merchant.address }}</td>
            </tr>
            <tr>
                <th>Phonenumber</th>
                <td>{{ merchant.phonenumber }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ merchant.email }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ merchant.createdat ? merchant.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ merchant.updatedat ? merchant.updatedat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_merchant_index') }}">back to list</a>

    <a href="{{ path('app_merchant_edit', {'id': merchant.id}) }}">edit</a>

    {{ include('merchant/_delete_form.html.twig') }}
{% endblock %}
